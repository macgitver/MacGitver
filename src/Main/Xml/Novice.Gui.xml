<?xml version="1.0" encoding="utf-8"?>
<Heaven>

	<Preset Name="Welcome" Mode="Welcome"/>
	<Preset Name="Normal"  Mode="Novice"/>

	<Mode Name="Welcome" Selectable="0" Locking="1">

		<Views>
			<Disable Match="*"/>
			<Enable  Match="Welcome"/>
		</Views>

		<DefaultLayout>
			<View Name="Welcome"/>
		</DefaultLayout>

	</Mode>

	<Mode Name="Novice" Selectable="0" Locking="1">

		<Views>
			<Disable Match="*"/>
			<Enable  Match="History"/>
			<Enable  Match="WorkTree"/>
			<Enable  Match="Branches"/>
			<Enable  Match="Tags"/>
			<Enable  Match="Log"/>
		</Views>

		<DefaultLayout>
			<Split Orient="Vert">
				<Split Orient="Horz" Stretch="3">
					<Tab Caption="Left">
						<View Name="Branches"/>
						<View Name="Tags"/>
					</Tab>
					<Tab Caption="Top" Stretch="2">
						<View Name="History"/>
						<View Name="WorkTree"/>
					</Tab>
				</Split>
				<Tab Caption="Bottom">
					<View Name="Log"/>
				</Tab>
			</Split>
		</DefaultLayout>

	</Mode>

</Heaven>
